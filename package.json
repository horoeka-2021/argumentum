{
  "name": "argumentum",
  "version": "0.1.0",
  "description": "An app for holding arguments",
  "main": "server/index.js",
  "author": "EDA",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/horoeka-2021/anger_management.git"
  },
  "scripts": {
    "start": "run-p webpack server",
    "webpack": "webpack --config ./client/webpack.config.js",
    "server": "node server",
    "build": "run-p build:client build:server",
    "build:client": "npm run webpack -- --mode production",
    "build:server": "npm run db:migrate",
    "knex": "knex --knexfile ./server/db/knexfile.js",
    "db:migrate": "npm run knex -- migrate:latest",
    "db:seed": "npm run knex seed:run",
    "dev": "run-p dev:client dev:server",
    "dev:client": "npm run webpack -- --watch",
    "dev:server": "nodemon server",
    "db:reset": "npm run knex migrate:rollback && npm run db:migrate && npm run db:seed",
    "test": "jest --selectProjects client server",
    "test:e2e": "jest --selectProjects e2e --runInBand",
    "test:watch": "npm run test -- --watchAll",
    "lint": "eslint . --ext .js,.jsx"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-transform-regenerator",
      "@babel/plugin-transform-runtime"
    ]
  },
  "eslintConfig": {
    "extends": "eda",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "jest": {
    "verbose": true,
    "projects": [
      {
        "displayName": "client",
        "testEnvironment": "jsdom",
        "testMatch": [
          "<rootDir>/client/**/*.test.js"
        ],
        "setupFilesAfterEnv": [
          "@testing-library/jest-dom"
        ]
      },
      {
        "displayName": "server",
        "testMatch": [
          "<rootDir>/server/**/*.test.js"
        ]
      },
      {
        "displayName": "e2e",
        "testMatch": [
          "**/e2e/?(*.)+(spec|test).[jt]s?(x)"
        ]
      }
    ]
  },
  "engines": {
    "node": "14.16",
    "npm": "6.14.11"
  },
  "dependencies": {
    "@auth0/auth0-react": "^1.8.0",
    "@babel/core": "^7.13.15",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "@babel/plugin-transform-regenerator": "^7.13.15",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/register": "^7.13.14",
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/free-regular-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.16",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.9",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "bootstrap": "^5.1.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jest": "^26.6.3",
    "jest-playwright-preset": "^1.6.1",
    "knex": "^0.95.14",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "pg": "^8.6.0",
    "playwright": "^1.12.3",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.3",
    "react-chat-engine": "^1.11.22",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.3",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "regenerator-runtime": "^0.13.7",
    "sqlite3": "^5.0.2",
    "styled-components": "^5.3.3",
    "superagent": "^6.1.0",
    "supertest": "^6.1.3",
    "webpack": "^5.34.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^4.5.0"
  },
  "devDependencies": {
    "eslint": "7.9.0",
    "eslint-config-eda": "0.1.4"
  }
}
